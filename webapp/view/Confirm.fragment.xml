<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog type="Message" title="{i18n>confirmTitle}">
    <content>
      <Text text="{i18n>confirmQuestion}"/>
    </content>
    <beginButton>
      <Button type="Accept" text="{i18n>yes}" press="onYes"/>
    </beginButton>
    <endButton>
      <Button type="Reject" text="{i18n>no}" press="onNo"/>
    </endButton>
	</Dialog>
</core:FragmentDefinition>